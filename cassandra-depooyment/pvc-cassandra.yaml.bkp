kind: PersistentVolume
apiVersion: v1
metadata:
  name: cassandra-pv
  labels:
    type: local
spec:
  storageClassName: managed-premium
  capacity:
    storage: 1Gi
  accessModes:
    - ReadWriteOnce
---
kind: PersistentVolumeClaim
apiVersion: v1
metadata:
  name: cassandra-pvc
spec:
  storageClassName: managed-premium
  accessModes:
    - ReadWriteOnce
  resources:
    requests:
      storage: 1Gi
